programa
{
	
	funcao inicio()
	{
		inteiro num,res=0

		escreva("Digite um número: ") 
		leia(num)
		
		faca
		{	
			res=res+num
			num=num-1
			
		}enquanto(num>=0)
		escreva("resultado: ",res)
	}
}
